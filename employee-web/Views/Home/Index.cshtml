@model ContosoFinance.Apps.Admin.Models.HomeModel
@using AspNet.Mvc.Grid
@{
    ViewBag.Title = "Admin Home";
}

<div class="row">
    <div class="col-md-12"><br /></div>
</div>

<div class="jumbotron">
    <h2>Contoso Finance Admin</h2>
    <p class="lead">Below is a list of applications, sorted by reverse order date. You may click on an application to see its details and to obtain the generated PDF receipt.</p>
    <p><a href="@Url.Action("About", "Home")" class="btn red-btn btn-lg">Learn more &raquo;</a></p>
</div>

<h1>Completed Applications</h1>

@Html.Grid(Model.Orders).Columns(cb =>
{
    cb.For(p => Html.ActionLink("Details", "Details", "Home", new { Id = p.OrderId }, null)).Named("Application Details");
    cb.For(p => p.OrderDate).Named("Appliation Date");
    cb.For(p => p.FirstName);
    cb.For(p => p.LastName);
}).Attributes(@class => "table table-striped table-hover table-condensed").HeaderRowAttributes(new Dictionary<string, object> { { "class", "active" } })
